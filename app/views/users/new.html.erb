<h1>アカウント作成</h1>

<%= form_with model: @user, local: true do |f| %>
  <%= render 'shared/errors_messages' %>
  <div class='form-group'>
    <%= f.text_field :name, placeholder: 'ユーザー名', class: 'form-control', id: 'user_name' %>
  </div>
  <div class='form-group'>
    <%= f.email_field :email, placeholder: 'メールアドレス', class: 'form-control', id: 'user_email' %>
  </div>
  <div class='form-group'>
    <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control', id: 'user_password' %>
  </div>
  <div class='form-group'>
    <%= f.password_field :password_confirmation, placeholder: 'パスワード(確認)', class: 'form-control', id: 'password_confirmation' %>
  </div>
  <%= f.submit '登録', class: 'btn btn-success' %>
<% end %>
