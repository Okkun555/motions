<% provide(:title, 'Edit Log') %>

<div id='logs-edit'>
  <h1>- トレーニング ログ編集 -</h1>

  <%= form_with model: @log, local: true do |f| %>
    <%= render 'shared/errors_messages', object: f.object  %>
    <div class='form-group'>
      <%= f.label :training_day, '日付:', class: 'form-label' %>
      <%= f.date_field :training_day,value: Time.now.strftime("%Y-%m-%d"), id: 'training_day' %>
    </div>
    <div class='training-menu'>
      トレーニング内容:
      <%= f.fields_for :menus do |m| %>
        <%= render 'menu_fields', f: m  %>
      <% end %>
      <div id="links">
        <%= link_to_add_association '追加',f, :menus, class: 'btn' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :comment, 'コメント:', class: 'form-label' %>
      <%= f.text_field :comment, class: 'form-control', id: 'comment' %>
    </div>
    <%= f.submit '更新', class: 'btn btn-dark' %>
  <% end %>
</div>
