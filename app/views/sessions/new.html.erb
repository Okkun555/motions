<h1>ログイン</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div class='form-group'>
    <%= f.email_field :email, placeholder: 'メールアドレス', class: 'form-control', id: 'login_email' %>
  </div>
  <div class='form-group'>
    <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control', id: 'login_password' %>
  </div>
  <%= f.submit 'ログイン', class: 'btn btn-success' %>
<% end %>
