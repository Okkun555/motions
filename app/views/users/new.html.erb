<% provide(:title, 'Sign up') %>

<div id='users-new'>
  <h1>アカウント作成</h1>

  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/errors_messages', object: f.object %>
    <div class='form-group'>
      <%= f.text_field :name, placeholder: 'ユーザー名', class: 'form-control form-control-lg', id: 'user_name' %>
    </div>
    <div class='form-group'>
      <%= f.email_field :email, placeholder: 'メールアドレス', class: 'form-control form-control-lg', id: 'user_email' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control form-control-lg', id: 'user_password' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password_confirmation, placeholder: 'パスワード(確認)', class: 'form-control form-control-lg', id: 'password_confirmation' %>
    </div>
    <%= f.submit 'アカウント作成', class: 'btn btn-lg btn-success' %>
  <% end %>
</div>
