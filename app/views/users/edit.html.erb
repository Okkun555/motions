<% provide(:title, 'プロフィール編集' ) %>

<div id='users-edit'>
  <h1>- プロフィール編集 -</h1>

  <%= form_with model: @user, local: true do |f| %>
    <%= render 'shared/errors_messages', object: f.object %>
    <div class='form-group'>
      <%= f.label :avatar, 'アイコン:', class: 'form-label' %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :name, 'ユーザー名:', class: 'form-label'%>
      <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
    </div>
    <%= f.fields_for :profile, @user.profile || Profile.new do |pf| %>
      <div class='form-group'>
        <%= pf.label :user_profile, 'プロフィール(400字以内):', class: 'form-label' %>
        <%= pf.text_area :user_profile, class: 'form-control', id: 'user_profile' %>
      </div>
      <div class='check-group'>
        <%= pf.label :category, '興味のある項目を選択(複数可):', class: 'check-label' %>
        <%= pf.check_box :gim_training, {} , true, false %>
        <label class='form-check-label'>ジムトレ</label>
        <%= pf.check_box :house_training, {}, true, false %>
        <label class='form-check-label'>家トレ</label>
        <%= pf.check_box :weight_training, {}, true, false %>
        <label class='form-check-label'>ウエイトトレーニング</label>
        <%= pf.check_box :bodyweight_training, {}, true, false %>
        <label class='form-check-label'>自重トレーニング</label>
        <%= pf.check_box :diet, {}, true, false %>
        <label class='form-check-label'>ダイエット</label>
        <%= pf.check_box :body_make, {}, true, false %>
        <label class='form-check-label'>ボディメイク</label>
        <%= pf.check_box :power, {}, true, false %>
        <label class='form-check-label'>パワー</label>
      </div>
    <% end %>
    <%= f.submit 'プロフィール更新', class: 'btn btn-dark' %>
  <% end %>
</div>
