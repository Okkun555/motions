<% provide(:title, 'User Setting') %>

<div id='users-setting'>
  <h1>メールアドレス変更</h1>
  <%= form_with model: @user, url: email_update_user_path(@user), local: true do |f| %>
    <div class='form-group'>
      <%= f.email_field :email, class: 'form-control', id: 'user_email' %>
    </div>
    <%= f.submit 'メールアドレス更新', class: 'btn btn-success' %>
  <% end %>

  <h1>パスワード変更</h1>
  <%= form_with model: @user, url: password_update_user_path(@user), local: true do |f| %>
    <div class='form-group'>
      <%= f.password_field :old_password, placeholder: '現在のパスワード', class: 'form-control', id: 'old_password' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password, placeholder: '新規パスワード', class: 'form-control', id: 'new_password' %>
    </div>
    <div class='form-group'>
      <%= f.password_field :password_confirmation, placeholder: '新規パスワード(確認)', class: 'form-control', id: 'new_password_confirmation' %>
    </div>
    <%= f.submit 'パスワード更新', class: 'btn btn-success' %>
  <% end %>
</div>
